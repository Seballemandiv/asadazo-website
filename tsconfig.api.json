{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.api.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "Node16",
    "skipLibCheck": true,

    /* Server (Node) */
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "types": ["node"],
    "noEmit": true,

    /* Linting */
    "strict": true
  },
  "include": ["api/**/*.ts"]
}


